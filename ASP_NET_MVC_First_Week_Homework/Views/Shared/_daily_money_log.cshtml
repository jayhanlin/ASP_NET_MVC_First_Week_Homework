@model List<ASP_NET_MVC_First_Week_Homework.Models.dailymoneylogViewModel>

@{
    Layout = "";
}


<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>類別</th>
                    <th>日期</th>
                    <th>金額</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    int index = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <th class=" col-xs-1">@((index% 20 > 0)?index % 20 : 20)</th>
                            <th class=" col-xs-1">@item.type</th>
                            <th class=" col-xs-1">@item.date</th>
                            <th class=" col-xs-1">@item.Amount</th>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
